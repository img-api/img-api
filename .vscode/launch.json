    "version": "0.2.0",
    "configurations": [
        {
            "name": "IMG-API: Launch main app",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "stopOnEntry": false,
            "env": {
                "FLASK_APP": "imgapi_launcher.py",
                "FLASK_ENV": "development",
                "FLASK_PORT": "5111",
                "FLASK_VSDEBUG": "true",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0",
                "-p",
                "5111",
            ],
            "envFile": "${workspaceRoot}/.venv",
            "jinja": true
        },
        {
            "name": "IMG-API: Launch main DEV",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "stopOnEntry": false,
            "env": {
                "FLASK_APP": "imgapi_launcher.py",
                "FLASK_ENV": "development",
                "FLASK_PORT": "5112",
                "FLASK_VSDEBUG": "true",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0",
                "-p",
                "5112",
            ],
            "envFile": "${workspaceRoot}/.venv",
            "jinja": true
        },
        {
            "name": "IMG-API: Debug Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}